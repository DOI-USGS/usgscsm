version: '0.1.{build}'

image: Visual Studio 2017

platform:
  - x64

configuration:
  - Release
  - Debug

install:
  # For GTest integration
  - git submodule update --init --recursive

build_script:
  - cmake -G "Visual Studio 15 2017 Win64"  

build:
  project: $(APPVEYOR_BUILD_FOLDER)\$(APPVEYOR_PROJECT_NAME).sln